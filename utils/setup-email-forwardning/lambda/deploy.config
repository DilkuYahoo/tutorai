[DEFAULT]
# Lambda function configuration
function_name = email-forwarder-lambda-function
region = us-east-1
runtime = python3.13
handler = email-forwarder.lambda_handler
memory = 256
timeout = 30

# IAM role (leave empty for auto-generated name)
role_name = email-forwarder-lambda-function-role

# S3 details
s3_bucket = cognifylabs-ai-emails

# File paths
script_path = email-forwarder.py
requirements_file = requirements.txt

# Environment variables for email forwarding
env_vars = Region=us-east-1,MailS3Bucket=cognifylabs-ai-emails,MailS3Prefix=emails,MailSender=noreply@cognifylabs.ai,MailRecipient=admin@cognifylabs.ai